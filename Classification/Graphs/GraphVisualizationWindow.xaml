<Window x:Class="Classification.Graphs.GraphVisualizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classification.Graphs"
        xmlns:graphsharp="clr-namespace:GraphSharp.Controls;assembly=GraphSharp.Controls"
        xmlns:tree="clr-namespace:GraphSharp.Algorithms.Layout.Simple.Tree;assembly=GraphSharp"
        mc:Ignorable="d"
        Title="GraphVisualizationWindow" Height="600" Width="800"
        x:Name="root">
    <Grid>
        <graphsharp:GraphLayout x:Name="MainGraphLayout" Graph="{Binding ElementName=root, Path=ClassificationTree}"
            LayoutAlgorithmType="EfficientSugiyama" OverlapRemovalAlgorithmType="FDA" EdgeRoutingAlgorithmType="" HighlightAlgorithmType="Simple" RenderTransformOrigin="0.5,0.5">
            <graphsharp:GraphLayout.LayoutParameters>
                <tree:SimpleTreeLayoutParameters Direction="BottomToTop"></tree:SimpleTreeLayoutParameters>
            </graphsharp:GraphLayout.LayoutParameters>
        </graphsharp:GraphLayout>
    </Grid>
</Window>
