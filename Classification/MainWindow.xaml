<Window x:Class="Classification.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Classification"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" ResizeMode="CanMinimize">
    
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem x:Name="ClassificationsOpen" Header="_Классификации" FontSize="16" Click="ClassificationsOpen_Click"/>
                <MenuItem x:Name="ConceptsOpen" Header="_Понятия" FontSize="16" Click="ConceptsOpen_Click"/>
                <MenuItem x:Name="PropertiesOpen" Header="_Свойства" FontSize="16" Click="PropertiesOpen_Click"/>
                <MenuItem x:Name="DefinitionsOpen" Header="_Определения" FontSize="16" Click="DefinitionsOpen_Click"/>
                <MenuItem x:Name="SourcesOpen" Header="_Источники" FontSize="16" Click="SourcesOpen_Click"/>
                <MenuItem x:Name="GraphVisualization" Header="_Визуализация" FontSize="16" Click="GraphVisualization_Click"/>
            </Menu>
            <StackPanel>
                <Frame x:Name="MainFrame" Content="Frame" Height="1027"/>
            </StackPanel>
        </DockPanel>


    </Grid>
</Window>
